{
    "private": true,
    "name": "codeclimate-example-typescript",
    "version": "0.0.1-SNAPSHOT",
    "description": "A quick example of integrating Code Climate with a repo",
    "keywords": [
        "codeclimate",
        "coverage",
        "example"
    ],
    "author": "Mateusz Kazimierczuk",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/xolvio/codeclimate-example-typescript.git",
        "path": "."
    },
    "directories": {
        "lib": "./dist"
    },
    "scripts": {
        "build": "npm run clean:compile && npm run compile",
        "clean": "npm run clean:compile && npm run clean:test",
        "clean:compile": "rimraf ./dist",
        "clean:test": "rimraf ./coverage",
        "compile": "tsc",
        "lint": "eslint . && prettier --check .",
        "lint:action": "node-actionlint",
        "fix": "npm run fix:eslint && npm run fix:prettier",
        "fix:eslint": "eslint --fix .",
        "fix:prettier": "prettier --write .",
        "test": "npm run clean:test && jest",
        "test:watch": "npm run test -- --watch",
        "type-check": "npm run compile -- --noEmit",
        "type-check:watch": "npm run type-check -- --watch"
    },
    "devDependencies": {
        "@types/jest": "^27.4.0",
        "@types/node": "^17.0.8",
        "@typescript-eslint/eslint-plugin": "^5.9.1",
        "@typescript-eslint/parser": "^5.9.1",
        "eslint": "^8.9.0",
        "eslint-config-prettier": "^8.3.0",
        "jest": "^27.5.1",
        "node-actionlint": "^1.2.2",
        "prettier": "2.5.1",
        "rimraf": "3.0.2",
        "ts-jest": "^27.1.3",
        "ts-node": "^10.5.0",
        "typescript": "next"
    }
}
